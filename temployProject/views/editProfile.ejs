<div class="profile">
  <div class="panel panel-default">
    <div class="panel-heading">Post a Job</div>
    <div class ="col-md-6 col-md-offset-3">
    <div class="panel-body" >
      <form action="/dashboard/<%= user._id %>/edit" method="POST">
      <div class="form-group">
        <label for="nameInput">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name" name="name" value= <%= user.name%>>
      </div>
      <div class="form-group">
        <label for="lastNameInput">Last Name</label>
        <input type="text" class="form-control" id="lastName" placeholder="Last Name" name="lastName" value=<%= user.lastName%>>
      </div>
      <div class="form-group">
        <label for="dateOfBirth">Date of Birth</label>
        <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" value=<%= user.dateOfBirth%>>
      </div>

      <!-- <% if (typeof(message) != "undefined") { %> -->
        <!-- <div class="alert alert-danger" role="alert"><%= message %></div> -->
      <!-- <% } %> -->
      <% if ( message != "" ) { %>
        <div class="alert alert-danger" role="alert"><%= message %></div>
      <% } %>
      <button type="submit" class="btn-primary btn-block">Update Profile</button>
    </form>

  </div>
  </div>
</div>
