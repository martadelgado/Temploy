<div class="jobform">
  <div class="panel panel-default">
    <div class="panel-heading">Post a Job</div>
    <div class ="col-md-5 col-md-offset-3">
    <div class="panel-body" >
          <form action="/jobform" method="POST">
            <div class="form-group">
              <label for="jobTitle">Job Title</label>
              <input type="text" class="form-control" id="jobTitle" name="jobTitle">
            </div>
            <div class="form-group">
              <label for="jobCategory"> Category </label>
              <input type="text" class="form-control" id="jobCategory" name="jobCategory">
            </div>
            <div class="form-group">
              <label for="jobDescription">Job Description</label> </br>
              <textarea name="message" rows="10" cols="44"> </textarea>
              <%# <input type="text" class="form-control" id="jobDescription"  name="jobDescription">%>
            </div>
        <button type="submit" class="btn btn-primary btn-block">Submit Job Offer</button>
      </form>
  </div>
  </div>
</div>
